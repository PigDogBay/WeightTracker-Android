<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickerMinusBtn"
        android:textSize="32sp"
        android:text="@string/number_picker_minus"
        />
    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickerSetBtn"
        android:textSize="24sp"
        android:text="@string/number_picker_default_value"
        android:textAllCaps="false"
        />
    <Button
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickerPlusBtn"
        android:textSize="32sp"
        android:text="@string/number_picker_plus"
        />
</merge>