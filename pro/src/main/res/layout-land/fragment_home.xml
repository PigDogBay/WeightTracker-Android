<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/HomeTopRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >

            <Button
                android:id="@+id/HomeBtnEntry"
                style="@style/HomeButton"
                android:background="#00000000"
                android:drawableTop="@drawable/tape_measure_add"
                android:text="@string/main_btn_enter" />

            <Button
                android:id="@+id/HomeBtnEditor"
                style="@style/HomeButton"
                android:background="#00000000"
                android:drawableTop="@drawable/index_edit"
                android:text="@string/main_btn_edit" />

            <Button
                android:id="@+id/HomeBtnSettings"
                style="@style/HomeButton"
                android:background="#00000000"
                android:drawableTop="@drawable/wrench"
                android:text="@string/main_btn_settings" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/HomeBottomRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/HomeTopRow"
            android:layout_centerHorizontal="true" >

            <Button
                android:id="@+id/HomeBtnChart"
                style="@style/HomeButton"
                android:background="#00000000"
                android:drawableTop="@drawable/line_chart"
                android:text="@string/main_btn_chart" />

            <Button
                android:id="@+id/HomeBtnReport"
                style="@style/HomeButton"
                android:background="#00000000"
                android:drawableTop="@drawable/presentation_chart"
                android:text="@string/main_btn_report" />

            <Button
                android:id="@+id/HomeBtnSync"
                style="@style/HomeButton"
                android:background="#00000000"
                android:drawableTop="@drawable/refresh"
                android:text="@string/main_btn_sync"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>